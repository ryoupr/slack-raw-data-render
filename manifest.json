{
  "manifest_version": 3,
  "name": "Slack Markdown Renderer",
  "version": "1.0.0",
  "description": "Renders Markdown content in Slack RAW file pages",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://files.slack.com/files-pri/*"
      ],
      "js": [
        "lib/marked.min.js",
        "content-script.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Slack Markdown Renderer"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}